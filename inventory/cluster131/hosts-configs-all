[all:vars]
# 应用软件安装的普通用户
install_user=udapdev
install_group=udapdev

# 应用软件在部署服务器的目录
software_home=/home/{{ install_user }}/software

# 应用软件在应用服务器的安装家目录
install_home=/home/{{ install_user }}/deploy

# java家目录
java_home=/usr/local/java/jdk1.8.0_201

###############################
##########平台开关##############
###############################
#下面是环境安装时的一些可选项
#需要安装时, 将"no"改成"yes"

#是否关闭操作系统selinux
handle_selinux="yes"

#是否关闭防火墙
handle_firewall="no"

#是否修改操作系统最大进程数和最大文件打开数限制
handle_ulimit="no"

#是否修改内核参数
handle_linux_core="no"

#是否进行时钟同步
#如果有内网服务器则配置ntp_server变量, 不配置则使用外网的'1.cn.pool.ntp.org'
handle_ntp="no"
#ntp_server="10.1.4.38"

