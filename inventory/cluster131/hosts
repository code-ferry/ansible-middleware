# 示例: 属于'webservers'组的主机集合描述
# [webservers]
# alpha.example.org
# www[001:006].example.com
# www[a-f].example.com
# 192.168.1.100 ansible_ssh_user=test ansible_ssh_pass=123456 ansible_become_user=root ansible_become_pass=1q2w3e ansible_become_method=sudo
# 192.168.1:[1:10]

###############################
##########部署服务器############
###############################
# 部署服务器: 运行这份ansible脚本的节点
[deploy]
bd131.com ansible_ssh_pass='udap' ansible_become_method=sudo ansible_become_pass='udap'

###############################
##########应用服务器############
###############################
# 应用服务器: 所有安装中间件的服务器
[application]
bd131.com ansible_ssh_pass='udap' ansible_become_method=sudo ansible_become_pass='udap'
edc01.com ansible_ssh_pass='udap' ansible_become_method=sudo ansible_become_pass='udap'
edc02.com ansible_ssh_pass='udap' ansible_become_method=sudo ansible_become_pass='udap'
edc03.com ansible_ssh_pass='udap' ansible_become_method=sudo ansible_become_pass='udap'

[flink]
edc01 jobmanager="yes"
edc02 taskmanager="yes"
edc03 taskmanager="yes"

[hadoop]
edc01.com datanode="yes"
edc02.com namenode="yes" yarn="yes"
edc03.com datanode="yes"

[hbase]
edc01.com master="yes"
edc02.com regionserver="yes" backup_master="yes"
edc03.com regionserver ="yes"

[hive]
edc02.com

[etcd]
edc01.com
edc02.com
edc03.com

[zookeeper]
edc01
;192.168.128.202
;192.168.128.203

[kerberos]
bd131.com

[kerberos_client]
edc01.com
edc02.com
edc03.com

[ssl]
edc01 ansible_ssh_pass='udap' ansible_become_method=sudo ansible_become_pass='udap'
edc02 ansible_ssh_pass='udap' ansible_become_method=sudo ansible_become_pass='udap'
edc03 ansible_ssh_pass='udap' ansible_become_method=sudo ansible_become_pass='udap'
